{
  "compilerOptions": {
  "target": "es2016",
  "jsx": "react",
  "module": "commonjs",
  "allowJs": true,
  "checkJs": true,
  "declaration": true,
  "declarationMap": true,
  "sourceMap": true,
  "removeComments": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true,
  "experimentalDecorators": true,
  "outDir": "dist"
  },
  "include": [
    "src/**/*", 
    "test/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
